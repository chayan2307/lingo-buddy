<div class="index-background">

<div class="teachers-heading mt-0">
  <br>
  <center><h1 style="color:black">Available Lingo Buddies</h1></center>
</div>
<div class="container card-map">
  <div class="container card-grid mt-3 pb-3">
    <% @users.shuffle.each do |user| %>
      <% if user.teacher %>
        <div class="card mb-3" style="width: 16rem; background-color:rgb(217, 208, 197)">
        <% if user.photo.attached? %>
          <%= cl_image_tag user.photo.key, class: "user-img", crop: :fill %>
          <% else %>
          <img src="<%= user.photo_url %>" class="user-img" alt="Profile Picture">
          <% end %>
          <div class="mt-3"><h5 style="color:black" class="card-title mt-2"><%= link_to "#{user.first_name.capitalize} #{user.last_name.capitalize}", user_path(user)%></h5></div>
          <div class="card-body">
            <%# <h6><%= "#{user.review}"</h6> %>
            <h6><b>Languages: </b><%= "#{user.languages}" %></h6>
            <h6><b>Location: </b><%= "#{user.location}" %></h6>
            <h6><b>Rate: </b><%= "Â£#{user.rate}" %>/hour</h6>
          </div>
          <%# <%=link_to "Find out more".html_safe, user_path(user), class: "mt-auto btn btn-primary mb-2"%>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="container" style="position: sticky; top: 0; width: 100%; height: 100vh;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
</div>
