<div class="index-background">

<div class="teachers-heading mt-0">
  <br>
  <center><h1 style="color:black">Available Teachers</h1></center>
</div>
<div class="container card-map">
  <div class="container card-grid mb-2 mt-3">
    <% @users.shuffle.each do |user| %>
      <% if user.teacher %>
        <div class="card" style="width: 16rem; background-color:rgb(217, 208, 197)">
          <img src="<%= user.photo_url %>" class="user-img" alt="Profile Picture">
          <h5 style="color:black" class="card-title mt-2"><%= link_to "#{user.first_name.capitalize} #{user.last_name.capitalize}", user_path(user)%></h5>
          <div class="card-body">
            <p><b>Languages Spoken: </b><%= "#{user.languages}" %></p>
            <p><b>Location: </b><%= "#{user.location}" %></p>
            <p><b>Rate: </b><%= "Â£#{user.rate}" %>/hour</p>
          </div>
          <%=link_to "Find out more".html_safe, user_path(user), class: "mt-auto btn btn-primary mb-2"%>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="container" style=" position: sticky; top: 0; width: 100%; height: 660px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
</div>
