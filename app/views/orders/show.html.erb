<div class="container">
  <div class="row py-4">
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>Issued On:</strong> <%= @order.created_at.to_date %></li>
        <br>
        <li><strong>Service:</strong> Lingo Buddy for <strong><%= @order.user.first_name %> <%= @order.user.last_name %></strong></li>
        <br>
        <li><strong>Total Amount Paid:</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
    </div>
  </div>
</div>
