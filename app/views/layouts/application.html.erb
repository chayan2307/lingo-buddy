      <link href="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.css" rel="stylesheet">

      <!-- CSS only -->
    </head>

    <body>
        <%= render "shared/navbar" %>
        <%= render "shared/flashes" %>
        <div><%= yield %></div>
        <%= render "shared/footer" %>
