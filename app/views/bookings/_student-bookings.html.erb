<% if my_bookings.present? %>
  <%# <center><h1 style="color:white">Bookings</h1></center> %>
    <div class="container mt-5 mb-0">
      <div class="cards">
        <% my_bookings.each do |booking| %>
          <div class="card mb-5 p-3" style="border-radius:30px;">
            <div class="card-body p-3" style="width:700px;" >
              <h3>Upcoming Booking with <%= booking.user_teacher[:first_name] %> <%= booking.user_teacher[:last_name] %></h3>
              <h5><em>Language</em>: <%= booking.user_teacher[:languages] %></h5>
              <h5 class="card-title"><em>Date & Time</em>: <%="#{booking.start_date} at #{booking.time}" %></h5>
              <h5 class="card-title"><em>Rate</em>: £<%= "#{booking.user_teacher[:rate]}" %>/hour</h5>
              <% if booking.confirmed? %>
                <h5 class="card-title mb-3"><em>Status</em>: Confirmed  ✅</h5>
                <% if booking.chatrooms.first.nil? %>
                <%= simple_form_for [booking, chatroom] do |f| %>
              <div class="body d-flex justify-content-between m-3 ">
                <%= f.submit "Start a chat with your Buddy!", class: "btn-lingo-buddy-green mb-3" %>
              </div>
                <% end %>
                <% else %>
              <%# <div class="body d-flex justify-content-between m-3 "> %>
                <center><%= link_to "Go to the chat", booking_chatroom_path(booking, booking.chatrooms.first), class: "btn-lingo-buddy-green mb-3", style:"display: center" %> </center>
                <% end %>
              <%# </div> %>
              <% else %>
                <h5 class="card-title mb-3"><em>Status</em>: Unconfirmed ❌</h5>
                <% if booking.chatrooms.first.nil? %>
                <%= simple_form_for [booking, chatroom] do |f| %>
              <%# <div class="body d-flex justify-content-between m-3 "> %>
                <%= f.submit "Start a chat with your Buddy!", class: "btn-lingo-buddy-green mb-3" %>
              <%# </div> %>
                <% end %>
                <% else %>
              <%# <div class="body d-flex justify-content-between m-3 "> %>
                <center><%= link_to "Go to the chat", booking_chatroom_path(booking, booking.chatrooms.first), class: "btn-lingo-buddy-green mb-3", style:"display: center" %> </center>
                <% end %>
              <% end %>
              <%# <div class="body d-flex justify-content-between m-3 "> %>
                <%= link_to "Cancel this booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?"}, class: "btn-lingo-buddy-green", style:"background-color:red"%>
              <%# </div> %>
            </div>
          </div>
        <% end %>
  <% else %>
    <br>
    <br>
    <center><%= link_to "No bookings! Find a Lingo Buddy", users_path, class: "btn-lingo-buddy-green"%></center>
  <% end %>
  </div>
</div>
