<% if my_bookings.present? %>
  <center><h1 style="color:black">Bookings</h1></center>
    <div class="container mt-5 mb-5">
      <div class="cards">
        <% my_bookings.each do |booking| %>
          <div class="card">
            <div class="card-body">
              <h3>Upcoming Booking with <%= booking.user_teacher[:first_name] %> <%= booking.user_teacher[:last_name] %></h3>
              <h5><em>Language</em>: <%= booking.user_teacher[:languages] %></h5>
              <h5 class="card-title"><em>Date & Time</em>: <%="#{booking.start_date} at #{booking.time}" %></h5>
              <h5 class="card-title"><em>Rate</em>: £<%= "#{booking.user_teacher[:rate]}" %>/hour</h5>
              <% if booking.confirmed? %>
                <h5 class="card-title"><em>Status</em>: Confirmed  ✅</h5>
              <% else %>
                <h5 class="card-title"><em>Status</em>: Unconfirmed ❌</h5>
              <% end %>
              <center><%= link_to "Cancel this booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?"}, class: "btn btn-danger"%></center>
            </div>
          </div>
        <% end %>
  <% else %>
    <br>
    <br>
    <center><%= link_to "No bookings! Find a Lingo Buddy", users_path, class: "btn btn-danger"%></center>
  <% end %>
  </div>
</div>
