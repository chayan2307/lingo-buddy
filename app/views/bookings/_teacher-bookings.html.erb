<% if my_bookings.present? %>
  <div class="container mt-5 mb-5">
    <div class="cards">
      <% my_bookings.each do |booking| %>
      <% if booking.confirmed? %>
        <div class="card mb-5 p-3" style="border-radius:30px;">
            <div class="card-body p-3" style="width:700px;" >
          <h5>Booking with <%= booking.user_student[:first_name] %></h5>
          <div class="card-title">
            <h5> <%= "#{booking.start_time.strftime("%A %dth %B at %l:%M %p")}" %></h5>
            <% if booking.confirmed? %>
              <h5 class="card-title mb-3"><em>Status</em>: Confirmed ✅ </h5>
              <% if booking.chatrooms.first.nil? %>
              <%= simple_form_for [booking, chatroom] do |f| %>
            <%# <div class="body d-flex justify-content-between m-3" style="width:250px"> %>
              <%= f.submit "Start a chat!", class: "btn-lingo-buddy-green mb-3", style:"display: center" %></center>
            <%# </div> %>
              <% end %>
              <% else %>
            <%# <div class="body d-flex justify-content-between m-3 "> %>
              <%= link_to "Go to the chat", booking_chatroom_path(booking, booking.chatrooms.first), class: "btn-lingo-buddy-green mb-3", style:"display: center" %>
            <%# </div> %>
              <% end %>
            <% else %>
              <h5 class="card-title"><em>Status</em>: Unconfirmed</h5>
            <% end %>
              <%= link_to "Cancel this booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?"}, class: "btn-lingo-buddy-green", style:"background-color:red"%>
          </div>
        </div>
        <% else %>
          <div class="card mb-5 p-3" style="border-radius:30px;">
            <div class="card-body p-3" style="width:700px;" >
            <h5>Booking Request from <%= booking.user_student[:first_name] %> <%= booking.user_student[:last_name] %></h5>
            <h5 class="card-title"><%= "#{booking.start_time.strftime("%A %dth %B at %l:%M %p")}" %></h5>
            <% if booking.confirmed?  %>
              <h5 class="card-title mb-3">Status: Confirmed ✅</h5>
            <% else %>
              <h5 class="card-title mb-3">Status: Unconfirmed ❌</h5>
            <% end %>
            <center><%= link_to "Accept this booking", "/confirm/#{booking.id}" , class: "btn-lingo-buddy-green mb-3", style:"display: center" %></center>
            <%= link_to "Decline this booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?"}, class: "btn-lingo-buddy-green", style:"background-color:red"%>

          </div>
        </div>
        <% end %>
      <% end %>
  </div>
    <% else %>
      <br>
      <br>
      <br>
      <br>
      <center><h1 style="color:white"><b>No upcoming bookings</h1></b></center>
    <% end %>
    <br>
    <br>
</div>
